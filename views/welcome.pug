extends layout
block content
    .h1 Привет начни разроботку вместе с нами!
    .h2 Войти
    form(action="/login" method="POST")
        .form-group
            label(for="exampleInputEmail1") Email address
            input(type="email" class="form-control" id="exampleInputEmail1" placeholder="Email" name="username")

        .form-group
            label(for="exampleInputPassword1") Password
            input(type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password")
        button(type="submit" class="btn btn-default") Войти
    h2 Или зарегистрируйтесь
    form(action="/registerme" method="POST")
        .form-group
            label(for="name") Ваше имя
            input(type="text" class="form-control" id="name" name="username")
        .form-group
            label(for="rEmail") Email address
            input(type="email" class="form-control" id="rEmail" placeholder="Email" name="useremail")

        .form-group
            label(for="rPassword") Password
            input(type="password" class="form-control" id="rPassword" placeholder="Password" name="userpassword")
        button(type="submit" class="btn btn-default") зарегистрироваться

